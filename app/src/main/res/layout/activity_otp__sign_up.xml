<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shubhammm.wheelsonrent.User.OTP_SignUp">


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:foregroundGravity="center_horizontal"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="180dp"
        android:text="Wheels On Rent"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView9"
        app:srcCompat="@drawable/cc" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView9"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/imageView10"
        android:layout_toRightOf="@+id/imageView10"

        android:hint="Enter Phone no."
        android:inputType="number" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView10"
        android:onClick="sendCode"
        android:text="SEND" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sendBtn"
        app:srcCompat="@drawable/passwordd"
        android:layout_toStartOf="@+id/phone"
        android:layout_toLeftOf="@+id/phone" />

    <EditText
        android:id="@+id/otp"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_below="@+id/sendBtn"
        android:layout_toEndOf="@+id/imageView11"
        android:layout_toRightOf="@+id/imageView11"
        android:hint="Enter Received Code" />

    <Button
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView11"
        android:onClick="verify"
        android:text="SUBMIT" />

</RelativeLayout>
